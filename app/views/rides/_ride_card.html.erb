<div class='card'>
  <div class='card-body'>
    <h5 class='card-title'><%= ride.name %></h5>
    <h6 class='1card-subtitle mb-2 text-muted1'><%= full_address(ride) %></h6>
  </div>
  <div class="card-footer">
    <%= link_to 'Editar', edit_user_ride_path(user, ride), method: :put, class: 'btn btn-warning' %>
    <%= link_to 'Deletar', ride, method: :delete, data: {confirm: "Tem certeza?"}, class: 'btn btn-danger'%>
  </div>
</div>