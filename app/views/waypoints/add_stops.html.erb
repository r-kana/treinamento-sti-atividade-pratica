<div class='d-flex flex-row justify-content-between align-items-center'>
  <h1>Adicionar paradas</h1>
  <button class='btn btn-primary' id='add-stop'>Adicionar</button>
</div>

<%= form_with url: create_stops_path(@ride) do |form| %>
  <h6>Lista de paradas:</h6>
  <ul class='list-group list-group-flush' id='input-list'>
    <% @ride.ordered_waypoints.each do |waypoint| %>
      <% next if waypoint.order == 0 %>
      <li class='list-group-item'><%= render partial: 'waypoint_inputs' %></li>
    <% end %>
  </ul>
  <div class="d-flex mb-4">
    <%= form.submit 'Salvar', class: 'btn btn-success me-4' %>
    <%= link_to 'Voltar', edit_user_ride_path(@current_user, @ride), class: 'btn btn-secondary' %>
  </div>
<% end %>
<%= javascript_pack_tag 'add_stop' %>
