<div class='card'>
  <div class='card-body'>
    <h5 class='card-title'>Para: <%= address_format(ride.destination) %> <% if ride.to_college %><span>( Campus )</span><% end %></h5>
    <h6 class='1card-subtitle mb-2 text-muted1'>Saindo de: <%= address_format(ride.departure) %> <% unless ride.to_college %><span>( Campus )</span><% end %></h6>
    <p class="card-text">Marcado para: <%= "#{ride.date - ride.time}" %></p>
    <p class="card-text">Assentos totais: <%= ride.seats %></p>
    <p class="card-text">Preço: <%= ride.prince %></p>
    <p class="card-text">Assentos disponives: <%= ride.seats - rides.number_of_passagers %></p>
    <p class="card-text">Observação: <%= ride.observation %></p>
  </div>
  <div class="card-footer">
    <%= link_to 'Detalhes', college_path(college), class: 'btn btn-outline-primary', type: 'button' %>
    <%= link_to 'Editar', edit_college_path(college), method: :put, class: 'btn btn-outline-warning', type: 'button' %>
    <%= link_to 'Deletar', college, method: :delete, data: {confirm: "Tem certeza?"}, class: 'btn btn-danger', type: 'button' %>
  </div>
</div>