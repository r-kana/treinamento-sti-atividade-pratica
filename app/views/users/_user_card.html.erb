<div class='card mb-4'>
  <div class='card-body d-flex flex-row justify-content-between container align-items-center'>
    <div class='d-flex flex-column justify-content-between'>
      <h4 class='card-title mb-4'><%= user.name %></h4>
      <h6 class='card-subtitle mb-3 ms-2 text-muted'>IdUFF: <%= user.iduff %></h6>
      <h6 class="card-subtitle mb-3 ms-2 text-muted">CPF: <%= user.cpf %></h6>
    </div>
    <div class='d-flex flex-column'>
      <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-outline-warning mb-3' %>
      <%= link_to 'Deletar', user, method: :delete, data: {confirm: "Tem certeza?"}, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</div>